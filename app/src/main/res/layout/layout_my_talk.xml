<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:text="오후 12:12"
            android:textSize="@dimen/talk_time_text_size"
            android:textColor="@color/bgdTime" />

        <TextView
            android:id="@+id/text_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:background="@color/bgdMyTalk"
            android:text="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/talk_other_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/other" />

        <TextView
            android:id="@+id/talk_other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/talk_other_img"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/talk_other_img"
            android:text="NAME"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/talk_other_name"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/talk_other_img"
            android:background="@color/bgdOtherTalk"
            android:text="text"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/time_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_other"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/text_other"
            android:text="오후 12:12"
            android:textSize="@dimen/talk_time_text_size"
            android:textColor="@color/bgdTime" />
    </RelativeLayout>
</RelativeLayout>